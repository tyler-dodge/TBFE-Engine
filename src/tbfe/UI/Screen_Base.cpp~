#include "Screen_Base.h"
void Screen_Base::AddElement(Element_Base *NewElement)
{
  Elements.push_back(NewElement);
};
Position Screen_Base::GetDimensions()
{
  return Dimensions;
};
Screen_Base::Screen_Base(int width, int height, int positionX, int positionY, string ImageSource)
{
  Visible=true;
  Elements.resize(0);
  Dimensions.X=width;
  Dimensions.Y=height;
  ScreenPosition.X=positionX;
  ScreenPosition.Y=positionY;
};
Screen_Base::~Screen_Base()
{
  for (int i=0;i<Elements.size();i++)
    {
      delete Elements.at(i);
    };
  Elements.resize(0);
};
Element_Base * Screen_Base::SelectElement(std::string Name)
{
  for (int i=0;i<Elements.size();i++)
    {
      if (Elements.at(i)->Name==Name)
	{
	  return Elements.at(i);
	};
    };
  return NULL;
};
void Screen_Base::RenderElements(SDL_Surface * screen)
{
  for(int i=0;i<Elements.size();i++)
    {
      if (Elements.at(i)!=NULL)
	{
	  if (Elements.at(i)->Visible==true)
	    {
	      Elements.at(i)->RenderElement(screen,ScreenPosition);
	    };
	};
    };
};

#ifndef Animation_L
#define Animation_L
#include "../misc/Structs.h"
class Animation
{
 private:
  vector<int> frames_;
  AnimationSheet image_;
  Position dimensions_;
  Position offset_;
  int startX_;
  float rate_;
  bool loop_;
  int finalFrame_;
  float currentFrame_;
 public:
  Animation();
  Animation(string,string,int width=100,int height=200,int OffsetX=0, int OffsetY=0,float fps=1,
	    bool doesLoop=false,int StartX=0,int FinalFrame=-1);
  int getFrame();
  SDL_Rect getFrameRect(Direction);
  bool currentFramePlus();
  bool loadSheet();
  void setSheetSource(string);
  Position getOffset();
  SDL_Surface * getSheet();
  void reset();
};
#endif
